<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="28dp"/>
            <stroke android:color="#cac8c8" android:width="1px"/>
            <solid android:color="#68c7f7"/>
        </shape>
    </item>

    <item android:state_checkable="true">
        <shape>
            <corners android:radius="28dp"/>
            <stroke android:color="#cac8c8" android:width="1px"/>
            <solid android:color="#68c7f7"/>
        </shape>
    </item>

    <item>
        <shape>
            <corners android:radius="28dp"/>
            <stroke android:color="#15b8ed" android:width="1px"/>
            <solid android:color="#33c3f2"/>
        </shape>
    </item>
</selector>