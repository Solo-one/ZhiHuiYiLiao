<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:myApp="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.asus.zhihuiyiliao.consulation.ConItemFragment">

    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/listview_pull"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"
        android:background="#dcdcdc"
        myApp:ptrHeaderBackground="#dcdcdc"
        myApp:ptrDrawable="@drawable/ic_loading_circle"
        myApp:ptrAnimationStyle="rotate"
        myApp:ptrHeaderTextColor="#676767"
        >
    </com.handmark.pulltorefresh.library.PullToRefreshListView>

</FrameLayout>
